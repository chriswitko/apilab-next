{
  "name": "apilab",
  "version": "1.0.2",
  "description": "A sample api server, microservice",
  "author": "Chris Witko <chris.witko@gmail.com>",
  "license": "ISC",
  "main": "index.js",
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "mock"
    ]
  },
  "scripts": {
    "test": "jest --coverage --expand --forceExit",
    "test-mocha": "mocha -R spec src/**/*.spec.js",
    "coverage": "jest --coverage --expand --forceExit",
    "dev": "node src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "build": "next build",
    "lint": "standard --verbose | snazzy",
    "node-debug": "DEBUG=express* node src/index.js",
    "chrome-debug": "node --debug-brk --inspect src/index.js"
  },
  "keywords": [
    "express",
    "mongodb",
    "docker",
    "microservice"
  ],
  "devDependencies": {
    "babel-plugin-transform-define": "^1.2.0",
    "eslint": "^3.13.1",
    "expect": "^1.20.2",
    "jest": "^19.0.2",
    "mocha": "^3.2.0",
    "should": "^11.1.2",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "babel-eslint": "^7.2.3",
    "express": "^4.15.2",
    "helmet": "^3.4.0",
    "http-status": "^0.2.5",
    "mongodb": "^2.1.18",
    "morgan": "^1.7.0",
    "next": "^2.3.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  }
}
